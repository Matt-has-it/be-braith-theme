<header class="section" style="padding-block:12px">
  <div style="max-width:1100px;margin:auto;display:flex;align-items:center;justify-content:space-between;">
    <a href="{{ routes.root_url }}" aria-label="{{ shop.name }} â€” Home" style="display:flex;align-items:center">
      {%- if settings.logo != blank -%}
        <img src="{{ settings.logo | image_url: width:280 }}" alt="{{ shop.name }}" style="height:40px;width:auto" />
      {%- else -%}
        <span class="h3">{{ shop.name }}</span>
      {%- endif -%}
    </a>
    <nav style="display:flex;gap:24px;font-size:14px;opacity:.85">
      <a href="{{ routes.collections_url }}">Shop</a>
      <a href="/pages/rituals">Rituals</a>
      <a href="/pages/about">About</a>
      <a href="/pages/support">Support</a>
    </nav>
  </div>
</header>

{% schema %}
{ "name":"Header", "settings":[ { "type":"image_picker","id":"logo","label":"Logo" } ] }
{% endschema %}
