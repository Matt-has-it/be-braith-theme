<section class="section fade-in">
  <div style="max-width:1100px;margin:auto;display:grid;grid-template-columns:1fr;gap:40px;align-items:center">
    <div>
      <h1 class="h1">{{ section.settings.headline }}</h1>
      <div class="p" style="margin-top:12px;max-width:36ch;opacity:.85;white-space:pre-line">{{ section.settings.subcopy }}</div>
      {% if section.settings.cta_label != blank %}
        <div style="margin-top:24px">
          <a href="{{ section.settings.cta_link }}" class="btn">{{ section.settings.cta_label }}</a>
        </div>
      {% endif %}
    </div>
    {% if section.settings.image != blank %}
      <div class="card" style="aspect-ratio:4/3;overflow:hidden">
        <img src="{{ section.settings.image | image_url: width:1400 }}" alt="" style="width:100%;height:100%;object-fit:cover">
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name":"Hero — Invitation",
  "settings":[
    {"type":"text","id":"headline","label":"Headline","default":"Rest is strength."},
    {"type":"textarea","id":"subcopy","label":"Sub-copy","default":"For too long, evenings have been treated as leftover hours — rushed, borrowed, or ignored.\nAt Be Braith, we see them differently. Evening is not absence.\nIt is the beginning of tomorrow.\nIt is the quiet space where strength renews, clarity returns, and calm becomes a daily choice."},
    {"type":"image_picker","id":"image","label":"Hero image"},
    {"type":"text","id":"cta_label","label":"CTA label","default":"Begin Your Reset →"},
    {"type":"url","id":"cta_link","label":"CTA link","default":"/collections/all"}
  ],
  "presets":[{"name":"Hero — Invitation"}]
}
{% endschema %}
